            <TextBlock
                x:Name="VersionTextBlock"
                Grid.Column="1"
                Margin="0,0,17,0"
                HorizontalAlignment="Right"
                Foreground="Gray" />

            <Grid Grid.Row="1" Grid.Column="1">
                <!--  TabControl with Sample-XAML-Code TabItems  -->
                <TabControl Style="{StaticResource TabControlStyle}" TabStripPlacement="Top">
                    <TabItem Header="Sample" Style="{StaticResource TabItemStyle}">

                        <Grid>
                            <Grid.ColumnDefinitions>
                                <ColumnDefinition Width="*" />
                                <ColumnDefinition Width="Auto" />
                            </Grid.ColumnDefinitions>

                            <!--  The sample itself  -->
                            <ScrollViewer
                                x:Name="_contentScrollViewer"
                                Focusable="False"
                                Style="{StaticResource LiveExplorerScrollViewerStyle}"
                                VerticalScrollBarVisibility="{Binding View.VerticalScrollBarVisibility, RelativeSource={RelativeSource AncestorType={x:Type Window}}}">
                                <ContentPresenter
                                    Margin="10,0,10,0"
                                    Content="{Binding View, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                    ScrollViewer.CanContentScroll="True">
                                    <ContentPresenter.Resources>
                                        <!--
                                            Since the LiveExplorerScrollViewerStyle applied on the parent ScrollViewer will override
                                            all ScrollBar styles for controls within the ScrollViewer, we must again override the default
                                            style for all scrollbars in the ContentPresenter to reapply the default style.
                                        -->
                                        <Style BasedOn="{StaticResource ScrollBarBaseStyle}" TargetType="{x:Type ScrollBar}" />
                                    </ContentPresenter.Resources>
                                </ContentPresenter>
                            </ScrollViewer>

                            <!--  Right border for sample description  -->
                            <Border
                                Grid.Column="1"
                                Width="225"
                                Margin="0,0,12,0"
                                BorderBrush="Gray"
                                BorderThickness="1">
                                <Grid>
                                    <Grid.RowDefinitions>
                                        <RowDefinition Height="Auto" />
                                        <RowDefinition Height="*" />
                                        <RowDefinition Height="17" />
                                        <RowDefinition Height="20" />
                                        <RowDefinition Height="5" />
                                    </Grid.RowDefinitions>

                                    <!--  Sample title  -->
                                    <TextBlock
                                        Margin="5,5"
                                        FontFamily="Segoe UI"
                                        FontSize="16"
                                        FontWeight="Bold"
                                        Foreground="#FF606060"
                                        Text="{Binding View.Title, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                                        TextWrapping="Wrap" />

                                    <!--  Description is added in Code-behind to support Paragraphs  -->
                                    <ScrollViewer
                                        Grid.Row="1"
                                        Margin="5,0"
                                        BorderBrush="Transparent"
                                        BorderThickness="0"
                                        Focusable="False"
                                        HorizontalScrollBarVisibility="Disabled"
                                        Style="{StaticResource LiveExplorerScrollViewerStyle}"
                                        VerticalScrollBarVisibility="Auto">
                                        <RichTextBox
                                            BorderThickness="0"
                                            Focusable="False"
                                            IsDocumentEnabled="True"
                                            IsHitTestVisible="True"
                                            IsReadOnly="True">
                                            <FlowDocument x:Name="_flowDocumentDesc" />
                                        </RichTextBox>
                                    </ScrollViewer>

                                    <!--  Bottom Rectangle  -->
                                    <Rectangle
                                        Grid.Row="2"
                                        Grid.RowSpan="3"
                                        Fill="{StaticResource SampleDefaultBrush}" />

                                    <!--  Bottom Rectangle text  -->
                                    <TextBlock
                                        Grid.Row="2"
                                        Margin="5,5,5,0"
                                        FontFamily="Verdana"
                                        FontSize="12"
                                        Foreground="White"
                                        Text="Additional Information" />

                                    <!--  Bottom Rectangle Hyperlink  -->
                                    <TextBlock Grid.Row="3" Margin="20,5,5,0">
                                        <Hyperlink
                                            Focusable="False"
                                            FontFamily="Verdana"
                                            FontSize="12"
                                            FontWeight="Black"
                                            Foreground="White"
                                            NavigateUri="https://xceed.com/xceed-toolkit-plus-for-wpf/"
                                            RequestNavigate="Hyperlink_RequestNavigate">
                                            Toolkit Plus
                                        </Hyperlink>
                                    </TextBlock>
                                </Grid>
                            </Border>
                        </Grid>
                    </TabItem>
                    <TabItem Header="XAML" Style="{StaticResource TabItemStyle}">
                        <xctk:RichTextBox
                            Margin="5,10,5,5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            FontFamily="Courier New"
                            HorizontalScrollBarVisibility="Auto"
                            IsReadOnly="True"
                            Text="{Binding View.XamlText, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                            TextFormatter="{x:Static core:XamlFormatter.Instance}"
                            VerticalScrollBarVisibility="Auto" />
                    </TabItem>
                    <TabItem Header="Code" Style="{StaticResource TabItemStyle}">
                        <xctk:RichTextBox
                            Margin="5,10,5,5"
                            HorizontalAlignment="Stretch"
                            VerticalAlignment="Stretch"
                            FontFamily="Courier New"
                            HorizontalScrollBarVisibility="Auto"
                            IsReadOnly="True"
                            Text="{Binding View.CSharpText, RelativeSource={RelativeSource AncestorType={x:Type Window}}}"
                            TextFormatter="{x:Static core:CSharpFormatter.Instance}"
                            VerticalScrollBarVisibility="Auto" />
                    </TabItem>
                </TabControl>
            </Grid>
        </Grid>
    </Grid>
